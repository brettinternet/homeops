---
# {{ ansible_managed }}

http:
  routers:
    sonarr:
      rule: "Host(`sonarr.{{ root_domain }}`)"
      service: sonarr
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec
        - oauth

  services:
      sonarr:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:8989"
