---
# {{ ansible_managed }}

http:
  routers:
    git:
      entryPoints:
        - websecure
      rule: "Host(`git.{{ root_domain }}`)"
      service: git
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec

  services:
      git:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:3004"
