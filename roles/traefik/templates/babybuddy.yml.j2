---
# {{ ansible_managed }}

http:
  routers:
    babybuddy:
      rule: "Host(`baby.{{ root_domain }}`)"
      service: babybuddy
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec

  services:
      babybuddy:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:8002"
