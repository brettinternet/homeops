---
# {{ ansible_managed }}

http:
  routers:
    calibre-content-server:
      rule: "Host(`read.{{ root_domain }}`)"
      service: calibre-content-server
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - basic-auth

  services:
      calibre-content-server:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:8085"
