---
# {{ ansible_managed }}

http:
  routers:
    calibre-web:
      rule: "Host(`books.{{ root_domain }}`)"
      service: calibre-web
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec

  services:
      calibre-web:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:8083"
