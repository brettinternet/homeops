---
# {{ ansible_managed }}

http:
  routers:
    uptime-kuma:
      rule: "Host(`status.{{ root_domain }}`)"
      service: uptime-kuma
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec
        - oauth

  services:
      uptime-kuma:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:3004"
