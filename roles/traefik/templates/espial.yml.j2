---
# {{ ansible_managed }}

http:
  routers:
    espial:
      rule: "Host(`bookmarks.{{ root_domain }}`)"
      service: espial
      tls:
        certResolver: http
      middlewares:
        - secure-headers

  services:
      espial:
        loadBalancer:
          servers:
            - url: "http://{{ homelab_local_ip }}:3006"
