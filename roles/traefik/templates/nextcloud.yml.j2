---
# {{ ansible_managed }}

http:
  routers:
    nextcloud:
      rule: "Host(`cloud.{{ root_domain }}`)"
      service: nextcloud
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec

  services:
      nextcloud:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:8081"
