---
# {{ ansible_managed }}

http:
  routers:
    organizr:
      rule: "Host(`apps.{{ root_domain }}`)"
      service: organizr
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec
        - oauth

  services:
      organizr:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:3011"
