---
# {{ ansible_managed }}

http:
  routers:
    radarr:
      rule: "Host(`radarr.{{ root_domain }}`)"
      service: radarr
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec
        - oauth
    radarr-api:
      rule: "Host(`radarr.{{ root_domain }}`) && PathPrefix(`/api`)"
      service: radarr
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec

  services:
      radarr:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:7878"
