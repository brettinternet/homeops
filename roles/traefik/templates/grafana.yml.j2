---
# {{ ansible_managed }}

http:
  routers:
    grafana:
      rule: "Host(`grafana.{{ root_domain }}`)"
      service: grafana
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec

  services:
      grafana:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:3008"
