---
# {{ ansible_managed }}

http:
  routers:
    plex:
      rule: "Host(`plex.{{ root_domain }}`)"
      service: plex
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec

  services:
      plex:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:32400"
