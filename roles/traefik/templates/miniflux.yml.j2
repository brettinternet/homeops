---
# {{ ansible_managed }}

http:
  routers:
    miniflux:
      rule: "Host(`rss.{{ root_domain }}`)"
      service: miniflux
      tls:
        certResolver: http
      middlewares:
        - secure-headers
        - ip-whitelist
        - crowdsec

  services:
      miniflux:
        loadBalancer:
          servers:
            - url: "http://{{ service_ip }}:8082"
